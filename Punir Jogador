$${
ifmatches(%HIT%,PLAYER);
	&player = %HITNAME%;
	set(trojan);
	log(" ");
	log("&a[!] &7Ativando puniçao %&player% &a[!]");
	log("&lOpçoes de Puniçao:");
	log(&8[&4&l1&8] &7= Para &4Banir &7o &6%&player%);
	log(&8[&c&l2&8] &7= Para &cKickar &7o &6%&player%);
	log(&8[&f&lEnter&8] &7= Para Cancelar);
	log(" ");
	log("&a[*] &7Desenvolvedor: &5&lTrojan &a[*]");
	log(" ");
	ACHIEVEMENTGET("Programador: Trojan",27);
	log(" ");
	prompt(#b,$$?,"Qual punição deseja aplicar no jogador %&player% ?");
	wait(250ms);
	if((#b >= 3)||(#b <= 0));
		log(" ");
		log("&4[!] &7Você cancelou a puniçao no jogador &6&l%&player% &4[!]");
		log(" ");
		unset(trojan);
		stop;
	endif;
	if(#b = 1);
	prompt(#d,$$?,"Deseja banir o %&player% por quantos dias?");
	wait(250ms);
		if(#d = air);
			log(" ");
			log("&4[!] &7Você cancelou o Banimento no jogador &6&l%&player% &4[!]");
			log(" ");
			unset(trojan);
			stop;
		endif;
	prompt(&m,$$?, "O jogador %&player% será banido por qual motivo?");
	wait(250ms);
	echo(/ban %&player% %#d% %&m%);
		if(&m = air);
			log(" ");
			log("&4[!] &7Você cancelou o Banimento no jogador &6&l%&player% &4[!]");
			log(" ");
			unset(trojan);
			stop;
		endif;
	elseif(#b = 2);
	prompt(&k,$$?,"Deseja realmente kickar o %&player% ? S/N");
		if((&k = "s")||(&k = "S"));
			wait(250ms);
			echo(/kick %&player%);
		elseif
	log(" ");
	log("&4[!] &7Você cancelou o Kick no jogador &6&l%&player% &4[!]");
	log(" ");
	unset(trojan);
	stop;
	endif;
	endif;
else;
	unset(trojan);
	log(" ");
	log("&4[!] &7Nao foi identificado o jogador &4[!]");
	log(" ");
	stop;
endif;
}$$
